            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DineInActivity" />
        <activity android:name=".TakeAwayActivity" />
        <activity android:name=".DetailMenuActivity" />
        <activity android:name=".RecyclerViewActivity"></activity>
    </application>

</manifest>